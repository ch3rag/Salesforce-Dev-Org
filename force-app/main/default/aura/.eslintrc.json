{
    "plugins": ["@salesforce/eslint-plugin-aura"],
    "extends": ["plugin:@salesforce/eslint-plugin-aura/recommended"],
    "rules": {
        "vars-on-top": "off",
        "no-unused-expressions": "off",
        "semi": "error",
        "func-names": "off",
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^component$|^event$|^helper$"
            }
        ]
    },
    "env": {
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "indent": ["error", 4]
}
