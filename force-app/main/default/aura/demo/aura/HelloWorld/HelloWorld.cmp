<aura:component implements="flexipage:availableForAllPageTypes" access="global" >
    <aura:attribute name="greeting" type="String" default="Hello World" />
    <aura:attribute name="number" type="Integer" default="11" />
    <aura:attribute name="booly" type="Boolean" default="false" />
    <lightning:card footer="Hello World Footer" title="{!v.greeting}">
        <p class="slds-p-horizontal_small">
            This is my first Aura Component!
            {!v.greeting} {!v.number} {!v.booly}
             <lightning:button variant="destructive" label="Destructive" title="Destructive action" class="slds-m-left_x-small"></lightning:button>
        </p>
    </lightning:card>
</aura:component>