<aura:component>
	<ltng:require scripts="{!$Resource.FitText}" afterScriptsLoaded="{!c.afterScriptsLoaded}"></ltng:require>
	<aura:attribute name="label" type="String" />
	<aura:attribute name="open" type="Boolean" default="false"/>
	<aura:registerEvent name="onclick" type="c:BlockClickEvent"></aura:registerEvent>
	<div class="board-block slds-align_absolute-center slds-var-m-around_medium slds-var-p-around_medium" onclick="{!c.onClickHandler}">
		<aura:if isTrue="{!v.open}">
			<div>{!v.label}</div>
		</aura:if>
	</div>
</aura:component>	
