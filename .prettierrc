{
  "trailingComma": "none",
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": { "parser": "lwc" }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": { "parser": "html" }
    },
	{
		"files": "*.css",
		"options": { "parser": "css" }
	}
  ],
  "tabWidth": 4,
  "quoteProps": "preserve",
  "singleQuote": true,
  "semi": true
}
